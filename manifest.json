{
  "manifest_version": 3,
  "name": "CN Tiểu Quỷ Hán tự Lục",
  "version": "1.0.0",
  "description": "Trợ lý học Hán tự thông minh giúp bạn ghi nhớ chữ nhanh hơn ngay trên mọi trang web.",
  "permissions": ["activeTab", "storage", "identity", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "CN Tiểu Quỷ Hán tự Lục",
    "default_popup": "dist/popup.html",
    "default_icon": {
      "16": "dist/icon16.png",
      "32": "dist/icon32.png",
      "48": "dist/icon48.png",
      "128": "dist/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["search.png", "dist/*", "dist/index.html", "dist/assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "oauth2": {
    "client_id": "929363714709-583uoo1svcla2jragdir9dt5vle7vljv.apps.googleusercontent.com",
    "scopes": ["profile", "email"]
  },
  "host_permissions": [
    "http://localhost:3000/*",
    "https://tieuquyhantuluc.onrender.com/*"
  ]
}
